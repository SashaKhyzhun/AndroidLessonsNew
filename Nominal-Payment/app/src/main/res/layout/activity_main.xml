<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="1"
    tools:context="sashakhyzhun.com.nominalpayment.MainActivity">

    <include android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <LinearLayout
        android:background="@color/primary_dark"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tool_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Номинал"
            android:id="@+id/tvNominal"
            android:paddingLeft="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Кол-во"
            android:id="@+id/tvQuantity" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Сумма"
            android:id="@+id/tvSum" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:id="@+id/linearLayout3"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2">

        <LinearLayout
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center">
            <TextView
                android:text="500 грн"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:phoneNumber="false"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:id="@+id/tvFor500" />
            <TextView
                android:text="200 грн"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:phoneNumber="false"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:id="@+id/tvFor200" />
            <TextView
                android:text="100 грн"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:phoneNumber="false"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:id="@+id/tvFor100" />
            <TextView
                android:text="50 грн"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:phoneNumber="false"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:id="@+id/tvFor50" />
            <TextView
                android:text="20 грн"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:phoneNumber="false"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:id="@+id/tvFor20" />
            <TextView
                android:text="10 грн"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:phoneNumber="false"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:id="@+id/tvFor10" />
            <TextView
                android:text="5 грн"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:phoneNumber="false"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:id="@+id/tvFor5" />
            <TextView
                android:text="2 грн"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:phoneNumber="false"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:id="@+id/tvFor2" />
            <TextView
                android:text="1 грн"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center|left"
                android:paddingLeft="25dp"
                android:id="@+id/tvFor1" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:gravity="center">
            <EditText
                android:id="@+id/editText500"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editText200"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editText100"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editText50"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editText20"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editText10"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editText5"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editText2"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editText1"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/resultFor500"
                android:text="0 грн"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/resultFor200"
                android:text="0 грн"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/resultFor100"
                android:text="0 грн"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/resultFor50"
                android:text="0 грн"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/resultFor20"
                android:text="0 грн"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/resultFor10"
                android:text="0 грн"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/resultFor5"
                android:text="0 грн"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/resultFor2"
                android:text="0 грн"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/resultFor1"
                android:text="0 грн"
                android:layout_weight="0.33"
                android:textColor="@color/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:layout_marginRight="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@color/primary_dark"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Всего:"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center|left"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="25dp" />

        <TextView
            android:id="@+id/tvTotalSum"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_weight="0.6"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginRight="20dp" />

        <Button
            android:background="@color/primary"
            android:id="@+id/buttonOK"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="OK"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>

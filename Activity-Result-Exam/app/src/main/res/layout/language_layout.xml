<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:id="@+id/buttonENG"
        android:onClick="onSelectedLanguage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Русский"
        android:id="@+id/buttonRUS"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buttonENG"
        android:layout_toEndOf="@+id/buttonENG"
        android:onClick="onSelectedLanguage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Українська"
        android:id="@+id/buttonUA"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buttonRUS"
        android:layout_toEndOf="@+id/buttonRUS"
        android:onClick="onSelectedLanguage" />
</RelativeLayout>